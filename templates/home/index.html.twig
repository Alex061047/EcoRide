{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('styles/app.css') }}" />
    <link rel="stylesheet" href="{{ asset('styles/home/home.css') }}" />
{% endblock %}

{% block body %}

<div class="hero-scene text-center text-black">
    <div class="hero-scene-content">
        <h1>EcoRide</h1>
    </div>
</div>

<section class="text-center text-black">
    <h3 class="fw-light"><u>Itinéraires</u></h3>

    <!-- Formulaire de recherche -->
    {{ form_start(form) }}
    
   {{ form_widget(form.jour, {
        'attr': {'class': 'form-control', 'placeholder': 'Jour'}
    }) }}
   
    {{ form_widget(form.depart, {
        'attr': {'class': 'form-control', 'placeholder': 'Ville de départ'}
    }) }}

    {{ form_widget(form.arrive, {
        'attr': {'class': 'form-control', 'placeholder': 'Ville d\'arrivée'}
    }) }}


    {{ form_end(form) }}

</section>

{% endblock %}
